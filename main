-- Buton Olu≈üturma Fonksiyonu
local function AddButton(name, desc, callback)
    local Btn = Instance.new("TextButton")
    Btn.Size = UDim2.new(1, -10, 0, 50)
    Btn.BackgroundColor3 = Color3.fromRGB(20, 20, 23)
    Btn.Text = ""
    Btn.AutoButtonColor = false
    Btn.Parent = Container
    local Corner = Instance.new("UICorner", Btn)
    Corner.CornerRadius = UDim.new(0, 8)

    local BTitle = Instance.new("TextLabel")
    BTitle.Size = UDim2.new(1, -10, 0, 30)
    BTitle.Position = UDim2.new(0, 10, 0, 5)
    BTitle.Text = name
    BTitle.TextColor3 = Theme.Text
    BTitle.Font = Enum.Font.GothamMedium
    BTitle.TextSize = 14
    BTitle.TextXAlignment = Enum.TextXAlignment.Left
    BTitle.BackgroundTransparency = 1
    BTitle.Parent = Btn

    local BDesc = Instance.new("TextLabel")
    BDesc.Size = UDim2.new(1, -10, 0, 20)
    BDesc.Position = UDim2.new(0, 10, 0, 25)
    BDesc.Text = desc
    BDesc.TextColor3 = Theme.DimText
    BDesc.Font = Enum.Font.Gotham
    BDesc.TextSize = 10
    BDesc.TextXAlignment = Enum.TextXAlignment.Left
    BDesc.BackgroundTransparency = 1
    BDesc.Parent = Btn

    Btn.MouseButton1Click:Connect(function()
        TweenService:Create(Btn, TweenInfo.new(0.2), {BackgroundColor3 = Theme.Main}):Play()
        task.wait(0.1)
        TweenService:Create(Btn, TweenInfo.new(0.2), {BackgroundColor3 = Color3.fromRGB(20, 20, 23)}):Play()
        callback()
    end)
end

