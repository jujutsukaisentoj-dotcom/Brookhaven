local lp = Players.LocalPlayer
local targetParent = (gethui and gethui()) or (game:GetService("RunService"):IsStudio() and lp:WaitForChild("PlayerGui") or CoreGui)

-- [SYSTEM] RE Folder Tespiti
local RE = ReplicatedStorage:FindFirstChild("RE") or ReplicatedStorage:FindFirstChild("RemoteEvents")
if not RE then
    warn("XenoHub: RE KlasÃ¶rÃ¼ bulunamadÄ±, ReplicatedStorage taranÄ±yor...")
    for _, v in pairs(ReplicatedStorage:GetChildren()) do
        if v:FindFirstChild("1Tool") or v:FindFirstChild("1Gun") then
            RE = v
            break
        end
    end
end

-- [SYSTEM] Item Verici Fonksiyonu
local function GiveItem(itemName)
    if RE and RE:FindFirstChild("1Tool") then
        -- Genellikle Brookhaven '1Tool' remote'u ile eÅŸya kuÅŸanÄ±r
        RE["1Tool"]:FireServer("Equip", itemName) 
        
        -- Alternatif YÃ¶ntem (BazÄ± sÃ¼rÃ¼mlerde farklÄ± Ã§alÄ±ÅŸabilir)
        task.wait(0.1)
        if RE:FindFirstChild("1GiveTool") then
             RE["1GiveTool"]:FireServer(itemName)
        end
    else
        warn("XenoHub: '1Tool' remote bulunamadÄ±!")
    end
end

