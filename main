local player = Players.LocalPlayer

-- Cartola Tarzƒ± Neon Tema
local Theme = {
    Main = Color3.fromRGB(145, 90, 230),      -- Cartola Moru
    Accent = Color3.fromRGB(180, 130, 255),   -- Parlama Rengi
    Dark = Color3.fromRGB(10, 10, 12),        -- Derin Siyah
