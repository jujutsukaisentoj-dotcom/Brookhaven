-- --- ğŸ“± MOBÄ°L AÃ‡/KAPAT BUTONU (SÃ¼rÃ¼kle & BÄ±rak Ã–zellikli) ---
local CoreGui = game:GetService("CoreGui")
local ScreenGui = Instance.new("ScreenGui")
local ToggleBtn = Instance.new("TextButton")
local UICorner = Instance.new("UICorner")

ScreenGui.Parent = CoreGui
ScreenGui.Name = "HexagonToggle"

ToggleBtn.Name = "Toggle"
ToggleBtn.Parent = ScreenGui
ToggleBtn.BackgroundColor3 = Color3.fromRGB(25, 25, 25)
ToggleBtn.Position = UDim2.new(0.1, 0, 0.3, 0) -- Sol tarafta baÅŸlar
ToggleBtn.Size = UDim2.new(0, 50, 0, 50)
ToggleBtn.Font = Enum.Font.FredokaOne
ToggleBtn.Text = "H"
ToggleBtn.TextColor3 = Color3.fromRGB(0, 255, 255)
ToggleBtn.TextSize = 24
ToggleBtn.Draggable = true -- ParmaÄŸÄ±nla ekranÄ±n istediÄŸin yerine taÅŸÄ±yabilirsin!
ToggleBtn.Active = true

UICorner.CornerRadius = UDim.new(1, 0) -- Tam yuvarlak buton
UICorner.Parent = ToggleBtn

ToggleBtn.MouseButton1Click:Connect(function()
    Library:ToggleUI()
end)

-- --- ğŸ› ï¸ FONKSÄ°YONLAR ---

-- ParÃ§acÄ±k OluÅŸturma Fonksiyonu (ID ve Renk Destekli)
local function SpawnParticle(textureID, colorRGB, speed, size)
    local char = game.Players.LocalPlayer.Character
    if char and char:FindFirstChild("HumanoidRootPart") then
        -- Eski efektleri temizle (KasmasÄ±nÄ± engeller)
        for _, v in pairs(char.HumanoidRootPart:GetChildren()) do
            if v:IsA("ParticleEmitter") then v:Destroy() end
        end

        -- Yeni Efekt
        local p = Instance.new("ParticleEmitter")
        p.Name = "HexagonParticle"
        p.Texture = textureID -- Ä°ÅŸte burasÄ± ÅŸekli deÄŸiÅŸtirir!
        p.Color = ColorSequence.new(colorRGB)
        p.Size = NumberSequence.new(size)
        p.Speed = NumberRange.new(speed)
        p.Lifetime = NumberRange.new(1, 2)
        p.Rate = 50
        p.Parent = char.HumanoidRootPart
        
        Library:Notify("Efekt", "ParÃ§acÄ±k aktif edildi!", 2)
    end
end

-- --- 1. SEKMELER VE EÅYALAR ---
local MainTab = Window:NewTab("Items & Guns")
local ItemSection = MainTab:NewSection("Ã–zel EÅŸyalar")

ItemSection:NewButton("ğŸ”« Spawn Money Gun", "Para saÃ§an silahÄ± verir.", function()
    -- Money Gun mantÄ±ÄŸÄ±
    local Backpack = game.Players.LocalPlayer.Backpack
    local Tool = Instance.new("Tool")
    Tool.Name = "Money Gun"
    Tool.RequiresHandle = false
    Tool.Parent = Backpack
    
    Tool.Activated:Connect(function()
        -- GÃ¶rsel efekt (Fake para)
        local cash = Instance.new("Part")
        cash.BrickColor = BrickColor.new("Dark green")
        cash.Size = Vector3.new(0.5, 0.1, 1)
        cash.Position = game.Players.LocalPlayer.Character.Head.Position + Vector3.new(0, 2, 0)
        cash.Parent = workspace
        cash.CanCollide = false
        game:GetService("Debris"):AddItem(cash, 3)
    end)
    Library:Notify("BaÅŸarÄ±lÄ±", "Money Gun envanterine geldi! (Visual)", 3)
end)

ItemSection:NewButton("â˜‚ï¸ Spawn Glider", "UÃ§urtma/Glider verir.", function()
    Library:Notify("Glider", "Glider spawn edildi.", 2)
end)

