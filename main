local Rayfield = loadstring(game:HttpGet('https://sirius.menu/rayfield'))()

local Window = Rayfield:CreateWindow({
   Name = "Brookhaven Özel Script",
   LoadingTitle = "Sistem Hazırlanıyor...",
   LoadingSubtitle = "Hazırlayan: Gemini",
   ConfigurationSaving = {
      Enabled = true,
      FolderName = "BrookhavenConfig", 
      FileName = "Ayarlar"
   },
   KeySystem = false -- Şimdilik anahtar sistemi koymuyorum, direkt açılsın.
})

-- Ana Sekmeyi Oluşturuyoruz
local MainTab = Window:CreateTab("Oyuncu Ayarları", 4483362458) -- İkon ID'si ile beraber
local Section = MainTab:CreateSection("Hareket Özellikleri")

Rayfield:Notify({
   Title = "Başarılı!",
   Content = "Arayüz başarıyla yüklendi. İyi oyunlar!",
   Duration = 5,
   Image = 4483362458,
})
