-- 1. MAIN TAB (Genel)
local MainTab = Window:MakeTab({
	Name = "Ana MenÃ¼",
	Icon = "rbxassetid://4483345998",
	PremiumOnly = false
})

MainTab:AddSection({ Name = "Karakter AyarlarÄ±" })

MainTab:AddSlider({
	Name = "HÄ±z (WalkSpeed)",
	Min = 16,
	Max = 300,
	Default = 16,
	Color = Color3.fromRGB(0, 255, 127),
	Increment = 1,
	ValueName = "Speed",
	Callback = function(Value)
		game.Players.LocalPlayer.Character.Humanoid.WalkSpeed = Value
	end    
})

MainTab:AddSlider({
	Name = "ZÄ±plama (JumpPower)",
	Min = 50,
	Max = 300,
	Default = 50,
	Color = Color3.fromRGB(0, 255, 255),
	Increment = 1,
	ValueName = "Jump",
	Callback = function(Value)
		game.Players.LocalPlayer.Character.Humanoid.JumpPower = Value
	end    
})

MainTab:AddToggle({
	Name = "Noclip (Duvardan GeÃ§)",
	Default = false,
	Callback = function(Value)
        local Noclip = nil
        local Clip = nil
        
        if Value then
            Noclip = game:GetService("RunService").Stepped:Connect(function()
                if game.Players.LocalPlayer.Character then
                    for _, v in pairs(game.Players.LocalPlayer.Character:GetDescendants()) do
                        if v:IsA("BasePart") and v.CanCollide == true then
                            v.CanCollide = false
                        end
                    end
                end
            end)
        else
            if Noclip then Noclip:Disconnect() end
        end
	end    
})

MainTab:AddButton({
    Name = "UÃ§ma Modu (Fly) - E TuÅŸu",
    Callback = function()
        loadstring(game:HttpGet("https://raw.githubusercontent.com/XNEOFF/FlyGuiV3/main/FlyGuiV3.txt"))()
    end
})

-- 2. ITEMS TAB (Senin EÅŸya KodlarÄ±n)
local ItemTab = Window:MakeTab({
	Name = "EÅŸyalar",
	Icon = "rbxassetid://4483345998",
	PremiumOnly = false
})

ItemTab:AddSection({ Name = "Gizli EÅŸyalar" })

ItemTab:AddButton({
	Name = "ðŸ’¸ Money Gun",
	Callback = function()
		local rep = game:GetService("ReplicatedStorage")
		local Players = game:GetService("Players")
		local localPlayer = Players.LocalPlayer
		local itemName = "MoneyGun"

        -- Notification Func
		local function tryNotify(title, text)
			pcall(function()
				game:GetService("StarterGui"):SetCore("SendNotification", {
					Title = title, Text = text, Duration = 4
				})
			end)
		end

        -- Trigger Logic
		local ok, err = pcall(function()
			local re = rep:FindFirstChild("RE") or rep:FindFirstChild("Remotes") or rep
            
            -- Method 1: Direct Remote
			local candidates = {"GetItem", "GetÄ°tem", "Get_Item", "GetTool", "GetToolToServer"}
			for _, name in ipairs(candidates) do
				local r = re:FindFirstChild(name)
				if r then
					if r.InvokeServer then r:InvokeServer(itemName) return
					elseif r.FireServer then r:FireServer(itemName) return end
				end
			end

            -- Method 2: Trigger Event
			local trigger = re:FindFirstChild("1Playe1rTrigge1rEven1t") or rep:FindFirstChild("1Playe1rTrigge1rEven1t")
			if trigger then
				local args = {[1] = "AcceptedToolToServer", [2] = itemName, [3] = localPlayer}
				if trigger.FireServer then trigger:FireServer(unpack(args)) return
				elseif trigger.InvokeServer then trigger:InvokeServer(unpack(args)) return end
			end
            
			tryNotify("Money Gun", "Deneniyor...")
		end)
	end
})

ItemTab:AddButton({
	Name = "ðŸª‚ Glider",
	Callback = function()
        pcall(function()
		    local args = {[1] = "AcceptedToolToServer", [2] = "Glider", [3] = game.Players.LocalPlayer}
		    game:GetService("ReplicatedStorage").RE["1Playe1rTrigge1rEven1t"]:FireServer(unpack(args))
        end)
	end
})

ItemTab:AddButton({
	Name = "ðŸ’£ Cannon (Top)",
	Callback = function()
        pcall(function()
		    local args = {[1] = "AcceptedToolToServer", [2] = "Cannon", [3] = game.Players.LocalPlayer}
		    game:GetService("ReplicatedStorage").RE["1Playe1rTrigge1rEven1t"]:FireServer(unpack(args))
        end)
	end
})

