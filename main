-- ESKİ KÜTÜPHANELERİ UNUT, BU KENDİ YAPIMIMIZ BİR ARAYÜZ
local ScreenGui = Instance.new("ScreenGui")
local MainFrame = Instance.new("Frame")
local Title = Instance.new("TextLabel")
local SpeedButton = Instance.new("TextButton")
local UnlockButton = Instance.new("TextButton")
local UICorner = Instance.new("UICorner")

-- Ayarlar
ScreenGui.Parent = game.CoreGui
ScreenGui.Name = "BrookhavenOzel"

MainFrame.Name = "MainFrame"
MainFrame.Parent = ScreenGui
MainFrame.BackgroundColor3 = Color3.fromRGB(35, 35, 35)
MainFrame.Position = UDim2.new(0.3, 0, 0.3, 0)
MainFrame.Size = UDim2.new(0, 200, 0, 250)
MainFrame.Active = true
MainFrame.Draggable = true -- Menüyü ekranda sürükleyebilirsin

UICorner.Parent = MainFrame

Title.Parent = MainFrame
Title.Size = UDim2.new(1, 0, 0, 40)
Title.Text = "BROOKHAVEN HUB"
Title.TextColor3 = Color3.fromRGB(255, 255, 255)
Title.BackgroundTransparency = 1
Title.TextSize = 20

-- HIZ BUTONU (Fonksiyonlu)
SpeedButton.Parent = MainFrame
SpeedButton.Position = UDim2.new(0.1, 0, 0.25, 0)
SpeedButton.Size = UDim2.new(0.8, 0, 0.2, 0)
SpeedButton.Text = "Süper Hız (100)"
SpeedButton.BackgroundColor3 = Color3.fromRGB(50, 150, 50)

SpeedButton.MouseButton1Click:Connect(function()
    game.Players.LocalPlayer.Character.Humanoid.WalkSpeed = 100
    print("Hız 100 yapıldı!")
end)

-- EV KİLİDİ AÇMA (Görsel Buton)
UnlockButton.Parent = MainFrame
UnlockButton.Position = UDim2.new(0.1, 0, 0.5, 0)
UnlockButton.Size = UDim2.new(0.8, 0, 0.2, 0)
UnlockButton.Text = "Ev Kilidi Kaldır"
UnlockButton.BackgroundColor3 = Color3.fromRGB(150, 50, 50)

UnlockButton.MouseButton1Click:Connect(function()
    -- Brookhaven ev kapıları kontrolü (Basit Versiyon)
    for i,v in pairs(game.Workspace:GetDescendants()) do
        if v.Name == "Door" or v.Name == "Gate" then
            v.CanCollide = false
            v.Transparency = 0.5
        end
    end
    print("Kapılar baypas edildi!")
end)
