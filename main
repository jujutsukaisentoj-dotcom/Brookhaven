local RedzLib = loadstring(game:HttpGet("https://raw.githubusercontent.com/REDZHUB/RedzLibV2/main/source.lua"))()

local Window = RedzLib:MakeWindow({
  Title = "Brookhaven: Redz PRO",
  SubTitle = "Hazırlayan: Gemini",
  SaveFolder = "RedzBrookhaven.json"
})

-- 1. SEKME: OYUNCU (Hareket & Fizik)
local MainTab = Window:MakeTab("Oyuncu", "user")

MainTab:AddSection("Fiziksel Güçler")

MainTab:AddSlider({
  Name = "Koşu Hızı (Speed)",
  Min = 16,
  Max = 350,
  Default = 16,
  Callback = function(Value)
    game.Players.LocalPlayer.Character.Humanoid.WalkSpeed = Value
  end
})

MainTab:AddSlider({
  Name = "Zıplama (Jump)",
  Min = 50,
  Max = 400,
  Default = 50,
  Callback = function(Value)
    game.Players.LocalPlayer.Character.Humanoid.JumpPower = Value
    game.Players.LocalPlayer.Character.Humanoid.UseJumpPower = true
  end
})

-- NOCLIP (DUVARLARDAN GEÇME)
-- Evleri soyarken kapalı kapılardan geçmek için bunu aç!
local Noclip = false
game:GetService("RunService").Stepped:Connect(function()
    if Noclip then
        for _, v in pairs(game.Players.LocalPlayer.Character:GetDescendants()) do
            if v:IsA("BasePart") then
                v.CanCollide = false
            end
        end
    end
end)

MainTab:AddToggle({
  Name = "Noclip (Duvarlardan Geç)",
  Default = false,
  Callback = function(Value)
    Noclip = Value
  end
})

-- 2. SEKME: IŞINLANMA (Soygun Noktaları)
local TeleportTab = Window:MakeTab("Işınlanma", "map")

TeleportTab:AddSection("Önemli Yerler")

TeleportTab:AddButton({
  Name = "Banka Kasası (Direkt İçeri)",
  Callback = function()
    game.Players.LocalPlayer.Character.HumanoidRootPart.CFrame = CFrame.new(-442, 23, -343)
  end
})

TeleportTab:AddButton({
  Name = "Gizli Ajan Üssü",
  Callback = function()
    game.Players.LocalPlayer.Character.HumanoidRootPart.CFrame = CFrame.new(-387, 18, 552)
  end
})

TeleportTab:AddButton({
  Name = "Spawn (Başlangıç)",
  Callback = function()
    game.Players.LocalPlayer.Character.HumanoidRootPart.CFrame = CFrame.new(0, 10, 0)
  end
})

-- 3. SEKME: GÖRÜŞ (ESP)
local VisualTab = Window:MakeTab("Görüş", "eye")

VisualTab:AddSection("Oyuncu İzleme")

VisualTab:AddButton({
  Name = "ESP Aç (Oyuncuları Gör)",
  Callback = function()
    for _, player in pairs(game.Players:GetPlayers()) do
        if player ~= game.Players.LocalPlayer and player.Character then
            local highlight = Instance.new("Highlight")
            highlight.Parent = player.Character
            highlight.FillColor = Color3.fromRGB(255, 0, 0) -- Kırmızı yanarlar
            highlight.OutlineColor = Color3.fromRGB(255, 255, 255)
        end
    end
  end
})

-- 4. SEKME: TROLL & EĞLENCE
local FunTab = Window:MakeTab("Eğlence", "star")

FunTab:AddButton({
  Name = "Uçma Modu (Basit)",
  Callback = function()
    local BV = Instance.new("BodyVelocity")
    BV.Parent = game.Players.LocalPlayer.Character.HumanoidRootPart
    BV.Velocity = Vector3.new(0, 50, 0) -- Havaya fırlatır
    wait(1)
    BV:Destroy()
  end
})

RedzLib:SetNotify("Pro Mod Aktif", "Redz Hub başarıyla yüklendi!", 3)
