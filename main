local ItemsSec = ItemsTab:NewSection("Gizli EÅŸyalar")

local tools = {
    {Title = "ğŸ’¸ Money Gun", Name = "MoneyGun"},
    {Title = "ğŸª‚ Glider", Name = "Glider"},
    {Title = "â„ï¸ Snowball Cannon", Name = "SnowballCannon"},
