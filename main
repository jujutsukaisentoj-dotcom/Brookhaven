local RedzLib = loadstring(game:HttpGet("https://raw.githubusercontent.com/REDZHUB/RedzLibV2/main/source.lua"))()

local Window = RedzLib:MakeWindow({
  Title = "Brookhaven: Özel Menü",
  SubTitle = "Hazırlayan: Gemini",
  SaveFolder = "BrookhavenConfig.json"
})

-- Ana Sekme (Tab)
local MainTab = Window:MakeTab("Genel", "home")

-- Bildirim Gönderelim (Çalıştığını anlamak için)
RedzLib:SetNotify("Sistem Aktif!", "Brookhaven scripti başarıyla yüklendi.", 5)

-- Hız Ayarı (Slider)
MainTab:AddSlider({
  Name = "Yürüme Hızı",
  Min = 16,
  Max = 300,
  Default = 16,
  Callback = function(Value)
    game.Players.LocalPlayer.Character.Humanoid.WalkSpeed = Value
  end
})
