--[[
    HEXAGON CLIENT - BROOKHAVEN FULL ACCESS
    Ã–zellikler: 
    - RE Folder RemoteEvent Tetikleyici (FireServer)
    - Dex Explorer ParÃ§acÄ±k Listesi (Full)
    - Mobil Uyumlu SÃ¼rÃ¼klenebilir Buton
    - Money Gun Entegrasyonu
]]

local Library = loadstring(game:HttpGet("https://raw.githubusercontent.com/xHeptc/Kavo-UI-Library/main/source.lua"))()
local Window = Library.CreateLib("Hexagon Client | Brookhaven", "DarkTheme")

-- --- ðŸ“± MOBÄ°L AÃ‡/KAPAT BUTONU (SÃ¼rÃ¼klenebilir) ---
local ScreenGui = Instance.new("ScreenGui")
local ToggleButton = Instance.new("TextButton")
local UICorner = Instance.new("UICorner")

ScreenGui.Parent = game:GetService("CoreGui")
ToggleButton.Parent = ScreenGui
ToggleButton.BackgroundColor3 = Color3.fromRGB(0, 170, 255)
ToggleButton.Position = UDim2.new(0.05, 0, 0.4, 0)
ToggleButton.Size = UDim2.new(0, 55, 0, 55)
ToggleButton.Text = "HEX"
ToggleButton.TextColor3 = Color3.fromRGB(255, 255, 255)
ToggleButton.Font = Enum.Font.FredokaOne
ToggleButton.TextSize = 18
ToggleButton.Draggable = true

UICorner.CornerRadius = UDim.new(1, 0)
UICorner.Parent = ToggleButton

ToggleButton.MouseButton1Click:Connect(function()
    Library:ToggleUI()
end)

-- --- ðŸ“¡ REMOTE EVENT (RE) SÄ°STEMÄ° ---
local RE = game:GetService("ReplicatedStorage"):WaitForChild("RE")

-- EÅŸya Tetikleyici (FireServer)
local function TriggerItem(itemName)
    -- Brookhaven genellikle ilk RemoteEvent'i kullanÄ±r
    local remote = RE:FindFirstChildOfClass("RemoteEvent")
    if remote then
        remote:FireServer(itemName)
        Library:Notify("Remote Tetiklendi", itemName .. " iÃ§in FireServer gÃ¶nderildi!", 2)
    else
        Library:Notify("Hata", "RE RemoteEvent bulunamadÄ±!", 3)
    end
end

-- ParÃ§acÄ±k Tetikleyici (Dex Listesi iÃ§in)
local function TriggerParticle(particleName, color)
    local remote = RE:FindFirstChildOfClass("RemoteEvent")
    if remote then
        -- Brookhaven'Ä±n parÃ§acÄ±k tetikleme formatÄ± genellikle (Kategori, Renk) ÅŸeklindedir
        remote:FireServer("ParticleGiver", particleName, color)
    end
end

-- --- 1. TAB: LIMITED ITEMS & MONEY GUN ---
local ItemsTab = Window:NewTab("Limited Items")
local ItemsSection = ItemsTab:NewSection("Tetiklenebilir EÅŸyalar")

local brookhavenItems = {
    "MoneyGun", "Glider", "Chainsaw", "UraniumRod", 
    "Couch", "WaterBalloon", "EggLauncher", "FireExtinguisher"
}

for _, item in pairs(brookhavenItems) do
    ItemsSection:NewButton("ðŸ”¥ " .. item, "RE Ã¼zerinden " .. item .. " tetikler.", function()
        TriggerItem(item)
    end)
end

-- --- 2. TAB: FE PARTICLE GIVER (DEX LIST) ---
local ParticleTab = Window:NewTab("FE Particles")

-- Renkler
local colors = {"White", "Yellow", "Orange", "Green", "Blue", "Purple", "Pink", "Red", "Black"}

-- Dex Explorer'daki Tam Liste
local dexCategories = {
    "Hearts", "Sparks", "Bubble", "Music", 
    "Smoke", "Star", "Fire", "Dots", "Twinkle"
}

for _, category in pairs(dexCategories) do
    local section = ParticleTab:NewSection(category .. " Efektleri")
    for _, color in pairs(colors) do
        section:NewButton(category .. " " .. color, "FireServer ile " .. color .. " " .. category .. " tetikler.", function()
            TriggerParticle(category, color)
            
            -- Client-side gÃ¶rsel yedek (EÄŸer sunucu gecikirse)
            local char = game.Players.LocalPlayer.Character
            if char and char:FindFirstChild("HumanoidRootPart") then
                for _, v in pairs(char.HumanoidRootPart:GetChildren()) do
                    if v:IsA("ParticleEmitter") then v:Destroy() end
                end
                local p = Instance.new("ParticleEmitter")
                p.Name = "HexEffect"
                p.Parent = char.HumanoidRootPart
                p.Color = ColorSequence.new(Color3.fromHex(color == "Black" and "000000" or color))
                p.Rate = 50
            end
        end)
    end
end

-- --- 3. TAB: AYARLAR ---
local Settings = Window:NewTab("Ayarlar")
Settings:NewSection("MenÃ¼ Kontrol")
Settings:NewKeybind("MenÃ¼yÃ¼ Kapat/AÃ§", "Klavye iÃ§in (PC)", Enum.KeyCode.RightControl, function()
    Library:ToggleUI()
end)

Settings:NewButton("ðŸš« TÃ¼m Efektleri Durdur", "Tetiklemeyi keser ve temizler.", function()
    local char = game.Players.LocalPlayer.Character
    if char then
        for _, v in pairs(char.HumanoidRootPart:GetChildren()) do
            if v:IsA("ParticleEmitter") then v:Destroy() end
        end
    end
end)
