-- ==============================================================================
-- 1. CARTOLA TARZI Y√úKLEME EKRANI
-- ==============================================================================
local function ShowLoading()
    local ScreenGui = Instance.new("ScreenGui")
    ScreenGui.Name = "XenoLoading"
    ScreenGui.IgnoreGuiInset = true
    ScreenGui.Parent = CoreGui

    local Frame = Instance.new("Frame")
    Frame.Size = UDim2.new(1, 0, 1, 0)
    Frame.BackgroundColor3 = Color3.fromRGB(0, 0, 0)
    Frame.Parent = ScreenGui

    local Logo = Instance.new("TextLabel")
    Logo.Size = UDim2.new(0, 400, 0, 100)
    Logo.Position = UDim2.new(0.5, -200, 0.5, -50)
    Logo.BackgroundTransparency = 1
    Logo.Text = "XENOHUB"
    Logo.Font = Enum.Font.GothamBold
    Logo.TextSize = 60
    Logo.TextColor3 = Theme.Main
    Logo.Parent = Frame
    
    local Sub = Instance.new("TextLabel")
    Sub.Size = UDim2.new(0, 400, 0, 30)
    Sub.Position = UDim2.new(0.5, -200, 0.5, 40)
    Sub.BackgroundTransparency = 1
    Sub.Text = "BLACK EDITION | CARTOLA STYLE"
    Sub.Font = Enum.Font.GothamMedium
    Sub.TextSize = 14
    Sub.TextColor3 = Theme.Accent
    Sub.TextTransparency = 1
    Sub.Parent = Frame

    -- Animasyonlar
    TweenService:Create(Sub, TweenInfo.new(1), {TextTransparency = 0}):Play()
    task.wait(2.5)
    TweenService:Create(Frame, TweenInfo.new(1), {BackgroundTransparency = 1}):Play()
    TweenService:Create(Logo, TweenInfo.new(0.5), {TextTransparency = 1}):Play()
    TweenService:Create(Sub, TweenInfo.new(0.5), {TextTransparency = 1}):Play()
    task.wait(1)
    ScreenGui:Destroy()
end

task.spawn(ShowLoading)

-- ==============================================================================
-- 2. ANA BYPASS Sƒ∞STEMƒ∞
-- ==============================================================================
local function ApplyBypasses()
    pcall(function()
        -- Gamepass ve Reklam Bypass (Dosya mantƒ±ƒüƒ±yla entegre)
        local Ads = require(ReplicatedStorage.Modules.Client.Ads.AdvertisementsController)
        Ads.GetUnlockedDuration = function() return 9e9 end
        
        local GP = require(ReplicatedStorage.Modules.Client.UI.Gamepass.GamepassController)
        GP.IsUnlocked = function() return true end
        
        local ShowGP = require(ReplicatedStorage.Modules.Client.UI.GamepassUnlockController)
        ShowGP.Show = function() return end
    end)
end

ApplyBypasses()

