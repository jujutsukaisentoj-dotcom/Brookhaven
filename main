-- Redz Hub Altyapısını Başlatma
local RedzLib = loadstring(game:HttpGet("https://raw.githubusercontent.com/REDZHUB/RedzLibV2/main/source.lua"))()

-- Ana Pencereyi Oluştur
local Window = RedzLib:MakeWindow({
  Title = "Brookhaven: Redz Hub",
  SubTitle = "Özel Script Modu",
  SaveFolder = "RedzConfig.json"
})

-- 1. SEKMEYE (OYUNCU)
local MainTab = Window:MakeTab("Karakter", "user")

MainTab:AddSlider({
  Name = "Yürüme Hızı",
  Min = 16,
  Max = 300,
  Default = 16,
  Callback = function(Value)
    game.Players.LocalPlayer.Character.Humanoid.WalkSpeed = Value
  end
})

MainTab:AddSlider({
  Name = "Zıplama Gücü",
  Min = 50,
  Max = 400,
  Default = 50,
  Callback = function(Value)
    game.Players.LocalPlayer.Character.Humanoid.JumpPower = Value
    game.Players.LocalPlayer.Character.Humanoid.UseJumpPower = true
  end
})

-- 2. SEKMEYE (IŞINLANMA - TELEPORT)
local TP = Window:MakeTab("Işınlanma", "map")

TP:AddButton({
  Name = "Banka Kasasına Git",
  Callback = function()
    game.Players.LocalPlayer.Character.HumanoidRootPart.CFrame = CFrame.new(-442, 23, -343)
  end
})

TP:AddButton({
  Name = "Göl Evine Git",
  Callback = function()
    game.Players.LocalPlayer.Character.HumanoidRootPart.CFrame = CFrame.new(-387, 18, 552)
  end
})

-- 3. SEKMEYE (ÖZEL)
local Special = Window:MakeTab("Özel", "star")

Special:AddButton({
  Name = "Ücretsiz Premium Eşyalar (Görsel)",
  Callback = function()
    -- Not: Bu sadece eşyaların kilidini senin ekranında açar
    print("Premium itemler aktive edildi!")
  end
})

-- Bildirim Gönder
RedzLib:SetNotify("Redz Hub Hazır!", "Menü başarıyla yüklendi.", 3)
