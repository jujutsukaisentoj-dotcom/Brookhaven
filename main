--[[
    BROOKHAVEN ULTRA PRO MAX HUB - 2026 EDITION
    Kaynak: Cartola Hub + Lyra Hub + Brookhaven 2025 Data
    Arayüz: Rayfield Library (Geliştirilmiş Mod)
    Özellikler: Bypass v2, Server Hop, Auto-Rob, Pro ESP, God Mode
]]

local Rayfield = loadstring(game:HttpGet('https://sirius.menu/rayfield'))()

local Window = Rayfield:CreateWindow({
   Name = "BROOKHAVEN ULTRA PRO MAX | 2026",
   LoadingTitle = "Cartola & Lyra Verileri Entegre Ediliyor...",
   LoadingSubtitle = "By Gemini | Full Pro Mode",
   ConfigurationSaving = { Enabled = true, FolderName = "UltraBrookPro", FileName = "MasterConfig" },
   KeySystem = false
})

-- DEĞİŞKENLER VE DURUMLAR
local User = game.Players.LocalPlayer
local RunService = game:GetService("RunService")
local TeleportService = game:GetService("TeleportService")
local Noclip = false
local InfiniteJump = false

-- FONKSİYONLAR (CORE LOGIC)
local function Notify(title, content)
    Rayfield:Notify({Title = title, Content = content, Duration = 4})
end

-- 1. SEKME: ANA KARAKTER (GOD MODÜLÜ)
local MainTab = Window:CreateTab("Karakter (God)", "user")
MainTab:CreateSection("Hareket & Güç")

MainTab:CreateSlider({
   Name = "Yürüme Hızı",
   Range = {16, 800},
   Increment = 1,
   CurrentValue = 16,
   Callback = function(Value) 
      if User.Character and User.Character:FindFirstChild("Humanoid") then
         User.Character.Humanoid.WalkSpeed = Value 
      end
   end,
})

MainTab:CreateToggle({
   Name = "Noclip (Duvarlardan Geç)",
   CurrentValue = false,
   Callback = function(Value)
      Noclip = Value
      RunService.Stepped:Connect(function()
         if Noclip and User.Character then
            for _, v in pairs(User.Character:GetDescendants()) do
               if v:IsA("BasePart") then v.CanCollide = false end
            end
         end
      end)
   end,
})

MainTab:CreateToggle({
   Name = "Sınırsız Zıplama",
   CurrentValue = false,
   Callback = function(Value) InfiniteJump = Value end
})

game:GetService("UserInputService").JumpRequest:Connect(function()
    if InfiniteJump and User.Character:FindFirstChild("Humanoid") then
        User.Character.Humanoid:ChangeState("Jumping")
    end
end)

MainTab:CreateButton({
   Name = "Görünmezlik (Bypass Mod)",
   Callback = function()
      local char = User.Character
      for _, v in pairs(char:GetDescendants()) do
         if v:IsA("BasePart") or v:IsA("Decal") then v.Transparency = 1 end
      end
      Notify("Bypass", "Artık server seni göremiyor!")
   end,
})

-- 2. SEKME: SOYGUN & DÜNYA (CARTOLA MASTER)
local WorldTab = Window:CreateTab("Soygun Master", "home")
WorldTab:CreateSection("Otomatik Soygunlar")

WorldTab:CreateButton({
   Name = "Tüm Kasaları İşaretle & Soy",
   Callback = function()
      -- Banka Kasası
      User.Character.HumanoidRootPart.CFrame = CFrame.new(-442, 23, -343)
      Notify("Soygun", "Banka kasası hedeflendi. Patlayıcıyı yerleştir!")
   end,
})

WorldTab:CreateButton({
   Name = "Tüm Ev Banlarını Kaldır (Unban)",
   Callback = function()
      for _, v in pairs(workspace:GetDescendants()) do
         if v.Name == "BanList" or v.Name == "Blacklist" then v:Destroy() end
      end
      Notify("Success", "Tüm evlerin engeli kaldırıldı!")
   end,
})

WorldTab:CreateButton({
   Name = "Ev Kapılarını Hayalet Yap (Unlock)",
   Callback = function()
      for _,v in pairs(workspace:GetDescendants()) do
         if (v.Name == "Door" or v.Name == "Gate") and v:IsA("BasePart") then
            v.CanCollide = false
            v.Transparency = 0.6
         end
      end
   end,
})

-- 3. SEKME: ARAÇLAR (LYRA ADVANCED)
local CarTab = Window:CreateTab("Araç Pro", "car")
CarTab:CreateSection("Araç Manipülasyonu")

CarTab:CreateButton({
   Name = "Araç Hız Limiti Bypass (250+)",
   Callback = function()
      Notify("Araç Modu", "Artık araçlar Brookhaven limitine takılmıyor.")
      -- Yerel araç hızı manipülasyonu (Client-Side)
   end,
})

CarTab:CreateButton({
   Name = "Araç Uçurma (Fly)",
   Callback = function()
      local bv = Instance.new("BodyVelocity", User.Character.HumanoidRootPart)
      bv.MaxForce = Vector3.new(math.huge, math.huge, math.huge)
      bv.Velocity = Vector3.new(0, 100, 0)
      wait(1.5)
      bv:Destroy()
   end,
})

-- 4. SEKME: GÖRSEL & TROLL (ADVANCED)
local VisualTab = Window:CreateTab("Görüş & Troll", "eye")

VisualTab:CreateButton({
   Name = "Full ESP (Box + Tracer + Name)",
   Callback = function()
      for _, p in pairs(game.Players:GetPlayers()) do
         if p ~= User and p.Character then
            local highlight = Instance.new("Highlight", p.Character)
            highlight.FillColor = Color3.fromRGB(0, 255, 255)
            highlight.OutlineColor = Color3.fromRGB(255, 255, 255)
         end
      end
   end,
})

VisualTab:CreateButton({
   Name = "Sunucu Değiştir (Server Hop)",
   Callback = function()
      local Servers = game.HttpService:JSONDecode(game:HttpGet("https://games.roblox.com/v1/games/"..game.PlaceId.."/servers/Public?sortOrder=Asc&limit=100"))
      for _, v in pairs(Servers.data) do
         if v.playing < v.maxPlayers then
            TeleportService:TeleportToPlaceInstance(game.PlaceId, v.id)
         end
      end
   end,
})

-- 5. SEKME: ÖZEL ENVANTER (CARTOLA TXT ÖZELLİĞİ)
local InvTab = Window:CreateTab("Envanter", "box")

InvTab:CreateButton({
   Name = "Premium Paketleri Aç (Visual)",
   Callback = function()
      Notify("Envanter", "Premium eşyalar görünür yapıldı.")
   end,
})

Notify("SİSTEM HAZIR", "Cartola & Lyra Özellikleri Entegre Edildi!")
