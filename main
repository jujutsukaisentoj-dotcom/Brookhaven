-- *** REKLAM & S√úRE MANTIƒûI D√úZELTƒ∞LDƒ∞ ***
CreateButton(FreePassTab, "Get Gamepass | AD Button needed (Fix Timer)", function()
    -- Ads Controller Bypass: S√ºreyi manuel olarak manip√ºle ediyoruz.
    spawn(function()
        local success, Ads = pcall(function() return require(ReplicatedStorage.Modules.Client.Ads.AdvertisementsController) end)
        if success and Ads then
            -- "Dakikalar eski haline d√∂ns√ºn" -> Oyunun orijinalinde reklam izleyince verilen s√ºre.
            -- Genellikle 10 dakika (600s) veya 20 saat (72000s) olur.
            -- Burada "Promise" d√∂nd√ºrerek reklamƒ±n izlendiƒüi ve "Available" olduƒüu sinyalini veriyoruz.
            
            Ads.GetUnlockedDuration = function() return 72000 end -- 20 Saat (User rahat etsin)
            
            Ads.IsEligibleForRewardedVideoAd = function() return true end
            
            Ads.IsRewardedVideoAdReady = function() 
                return require(ReplicatedStorage.Packages.Promise).resolve(Enum.AdAvailabilityResult.IsAvailable) 
            end
            
            -- √ñd√ºl fonksiyonunu manuel tetikle
            if Ads.OnRewardedAdClaimed then
                Ads.OnRewardedAdClaimed:Fire("Item Refresh")
            end
        end
    end)
    
    -- UI tarafƒ±nda g√∂rsel kilit a√ßma
    pcall(function()
        local GPUnlock = require(ReplicatedStorage.Modules.Client.UI.GamepassUnlockController)
        local GPModule = require(ReplicatedStorage.Modules.Shared.PlayerData.Gamepasses)
        -- Se√ßilen GP'yi a√ß
        for _, gpData in pairs(GPModule.All) do
            GPUnlock.Show(gpData) 
        end
    end)
    
    game:GetService("StarterGui"):SetCore("SendNotification", {Title = "Cartola Hub", Text = selectedPass .. " i√ßin Reklam Bypass Yapƒ±ldƒ±!", Duration = 3})
end)

CreateButton(FreePassTab, "Get All Gamepasses (Best) (Mobile)", function()
    -- Full Bypass Logic
    spawn(function()
        local success, GP = pcall(function() return require(ReplicatedStorage.Modules.Client.UI.GamepassUnlockController) end)
        if success and GP then
            GP.OwnsGamepass = function() return true end
            if GP.AllPassesFetched ~= nil then GP.AllPassesFetched = true end
        end
        
        -- G√∂rsel kilitleri kaldƒ±rma
        local PlayerGui = Players.LocalPlayer:WaitForChild("PlayerGui")
        for _, v in pairs(PlayerGui:GetDescendants()) do
            if v:IsA("ImageLabel") and (v.Image:find("lock") or v.Name:lower():find("lock")) then
                v.Visible = false
            end
        end
    end)
    
    -- Remote Sinyalleri (Sunucuya "Aldƒ±m" sinyali)
    local remote = ReplicatedStorage:FindFirstChild("RE") or ReplicatedStorage:FindFirstChild("Remotes")
    if remote then
        pcall(function() remote:FindFirstChild("RemoteEvent"):FireServer("UnlockAllPasses", true) end)
    end
    
    game:GetService("StarterGui"):SetCore("SendNotification", {Title = "Full Bypass", Text = "T√ºm Gamepassler Aktif Edildi!", Duration = 5})
end)

