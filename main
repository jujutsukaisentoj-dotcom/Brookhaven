for _, t in pairs(tools) do
    ItemsSec:NewButton(t.Title, t.Name .. " eÅŸyasÄ±nÄ± tetikler.", function()
        GetItem(t.Name)
    end)
end

ItemsSec:NewButton("ğŸ§  Telekinesis V5", "DÄ±ÅŸ scripti yÃ¼kler.", function()
