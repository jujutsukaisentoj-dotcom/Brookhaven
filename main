--[[
    HEXAGON PRO - ULTIMATE EMMITER & REMOTE ACCESS
    √ñzellikler:
    - NoResetGUIHandler > EmmiterList Tam Otomasyon
    - Geli≈ümi≈ü FireServer & InvokeServer (Hexagon Hub Mantƒ±ƒüƒ±)
    - Dex Explorer Par√ßacƒ±k Listesi (ID & Sayƒ± Kontroll√º)
    - Full Renk Desteƒüi & Mobil S√ºr√ºklenebilir Men√º
]]

local Library = loadstring(game:HttpGet("https://raw.githubusercontent.com/xHeptc/Kavo-UI-Library/main/source.lua"))()
local Window = Library.CreateLib("Hexagon Pro | Brookhaven", "DarkTheme")

-- --- üì± MOBƒ∞L A√á/KAPAT VE S√úR√úKLEME ---
local CoreGui = game:GetService("CoreGui")
local ScreenGui = Instance.new("ScreenGui", CoreGui)
local ToggleBtn = Instance.new("TextButton", ScreenGui)
local UICorner = Instance.new("UICorner", ToggleBtn)

ToggleBtn.Size = UDim2.new(0, 55, 0, 55)
ToggleBtn.Position = UDim2.new(0.02, 0, 0.45, 0)
ToggleBtn.Text = "HEX"
ToggleBtn.Draggable = true
ToggleBtn.BackgroundColor3 = Color3.fromRGB(0, 170, 255)
ToggleBtn.TextColor3 = Color3.fromRGB(255, 255, 255)
ToggleBtn.Font = Enum.Font.FredokaOne
UICorner.CornerRadius = UDim.new(1, 0)

ToggleBtn.MouseButton1Click:Connect(function() Library:ToggleUI() end)

-- --- üì° G√ú√áL√ú REMOTE & GUI ERƒ∞≈ûƒ∞Mƒ∞ ---
local rep = game:GetService("ReplicatedStorage")
local lp = game:GetService("Players").LocalPlayer
local PlayerGui = lp:WaitForChild("PlayerGui")

local function notify(title, text)
    pcall(function()
        game:GetService("StarterGui"):SetCore("SendNotification", {
            Title = title,
            Text = text,
            Duration = 3
        })
    end)
end

-- üõ†Ô∏è EMMITERLIST Kƒ∞Lƒ∞Dƒ∞Nƒ∞ KIRMA
local function UnlockEmmiterSystem()
    local path = PlayerGui:FindFirstChild("NoResetGUIHandler")
    if path then
        local emmiterList = path:FindFirstChild("AvatarEditorHolder")
            and path.AvatarEditorHolder:FindFirstChild("AvatarEditorMenu")
            and path.AvatarEditorHolder.AvatarEditorMenu:FindFirstChild("Catalog")
            and path.AvatarEditorHolder.AvatarEditorMenu.Catalog:FindFirstChild("Container")
            and path.AvatarEditorHolder.AvatarEditorMenu.Catalog.Container:FindFirstChild("EmmiterList")
        
        if emmiterList then
            emmiterList.Visible = true
            for _, v in pairs(emmiterList:GetDescendants()) do
                if v:IsA("GuiObject") then v.Visible = true end
                if v:IsA("BoolValue") or v:IsA("ValueBase") then
                    if v.Name == "Enabled" or v.Name == "Unlocked" then v.Value = true end
                end
            end
            notify("Sistem", "EmmiterList Tam Eri≈üim A√ßƒ±ldƒ±! ‚úÖ")
            return emmiterList
        end
    end
    notify("Hata", "EmmiterList Yolu Bulunamadƒ±! ‚ùå")
end

-- üì° REMOTE TETƒ∞KLEYƒ∞Cƒ∞ (FireServer)
local function TriggerRemote(itemName)
    local re = rep:FindFirstChild("RE")
    local trigger = re and re:FindFirstChild("1Playe1rTrigge1rEven1t")
    
    if trigger then
        trigger:FireServer("AcceptedToolToServer", itemName, lp)
        notify("Ba≈üarƒ±lƒ±", itemName .. " Tetiklendi! üî•")
    else
        -- Alternatif deneme
        local fallback = re:FindFirstChildOfClass("RemoteEvent")
        if fallback then fallback:FireServer(itemName) end
    end
end

-- --- üéí TAB 1: LIMITED ITEMS & TETƒ∞KLEME ---
local ItemsTab = Window:NewTab("Limited Items")
local ItemsSec = ItemsTab:NewSection("Gizli E≈üyalar (FireServer)")

local items = {
    {Name = "Money Gun", ID = "MoneyGun"},
    {Name = "Glider", ID = "Glider"},
    {Name = "Scythe", ID = "Scythe"},
    {Name = "Chainsaw", ID = "Chainsaw"},
    {Name = "Uranium Rod", ID = "UraniumRod"},
    {Name = "Egg Launcher", ID = "EggLauncher"},
    {Name = "Cannon", ID = "Cannon"}
}

for _, item in pairs(items) do
    ItemsSec:NewButton("üí∏ " .. item.Name, "Sunucuya istek g√∂nderir.", function()
        TriggerRemote(item.ID)
    end)
end

ItemsSec:NewButton("üß† Telekinesis V5", "FE Telekinesis y√ºkler.", function()
    loadstring(game:HttpGet("https://raw.githubusercontent.com/BRENOPOOF/fe-telekinessv5/refs/heads/main/Main.txt"))()
end)

-- --- ‚ú® TAB 2: Geli≈ümi≈ü EMMITER LIST (DEX) ---
local ParticleTab = Window:NewTab("Emmiter List")
local colors = {
    ["Red"] = Color3.fromRGB(255, 0, 0),
    ["Blue"] = Color3.fromRGB(0, 150, 255),
    ["Green"] = Color3.fromRGB(0, 255, 0),
    ["Purple"] = Color3.fromRGB(170, 0, 255),
    ["Yellow"] = Color3.fromRGB(255, 255, 0),
    ["Black"] = Color3.fromRGB(15, 15, 15),
    ["White"] = Color3.fromRGB(255, 255, 255)
}

local emitters = {
    {Name = "Small Hearts", ID = "2415370814"},
    {Name = "Sparks", ID = "242910831"},
    {Name = "Bubble", ID = "2412933758"},
    {Name = "Music", ID = "2412921852"},
    {Name = "Smoke", ID = "242907474"},
    {Name = "Star", ID = "2412918458"},
    {Name = "Fire", ID = "242908750"},
    {Name = "Dots", ID = "2412920230"},
    {Name = "Twinkle", ID = "2412915806"}
}

local EmmiterSec = ParticleTab:NewSection("üîì Manuel GUI Eri≈üimi")
EmmiterSec:NewButton("Unlock EmmiterList GUI", "Brookhaven Katalog Emmiter Frame'ini a√ßar.", function()
    UnlockEmmiterSystem()
end)

for _, emit in pairs(emitters) do
    local section = ParticleTab:NewSection(emit.Name)
    for colorName, colorValue in pairs(colors) do
        section:NewButton(emit.Name .. " [" .. colorName .. "]", "Ku≈üanƒ±r ve tetikler.", function()
            -- Sunucuyu uyar
            local re = rep:FindFirstChild("RE")
            if re and re:FindFirstChildOfClass("RemoteEvent") then
                re:FindFirstChildOfClass("RemoteEvent"):FireServer("ParticleGiver", emit.Name:gsub(" ",""), colorName)
            end
            
            -- Yerel karakter g√∂rseli (Dex Optimize)
            local char = lp.Character
            if char and char:FindFirstChild("HumanoidRootPart") then
                for _, v in pairs(char.HumanoidRootPart:GetChildren()) do
                    if v:IsA("ParticleEmitter") then v:Destroy() end
                end
                
                local p = Instance.new("ParticleEmitter")
                p.Name = "Hex_Emmiter"
                p.Texture = "rbxassetid://" .. emit.ID
                p.Color = ColorSequence.new(colorValue)
                p.Rate = 80
                p.Lifetime = NumberRange.new(1.5, 2.5)
                p.Speed = NumberRange.new(5, 7)
                p.Parent = char.HumanoidRootPart
                p.Enabled = true
            end
        end)
    end
end

-- --- ‚öôÔ∏è TAB 3: AYARLAR ---
local Settings = Window:NewTab("Ayarlar")
Settings:NewSection("Kontroller")
Settings:NewButton("üö´ T√ºm Efektleri Sil", "Karakteri temizler.", function()
    if lp.Character then
        for _, v in pairs(lp.Character.HumanoidRootPart:GetChildren()) do
            if v:IsA("ParticleEmitter") then v:Destroy() end
        end
    end
end)
