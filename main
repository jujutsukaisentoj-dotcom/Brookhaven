-- ============================================================================== --
-- [RE] ADMIN MODLARI
-- ============================================================================== --

CreateSection("âš¡ ADMIN MODLARI (RE: 1Faster/1Flying)")

CreateToggle("UÃ§uÅŸ Modu (1Flying)", "FlyingMode", function(v)
    if RE and RE:FindFirstChild("1Flying") then
        RE["1Flying"]:FireServer(v) -- '1Flying' RE remote'unu tetikler
    else
        -- Yedek Fly
        if v then
            local bp = Instance.new("BodyVelocity", lp.Character.HumanoidRootPart)
            bp.Name = "XenoFly"
            bp.Velocity = Vector3.new(0, 0, 0)
            bp.MaxForce = Vector3.new(math.huge, math.huge, math.huge)
        else
            if lp.Character.HumanoidRootPart:FindFirstChild("XenoFly") then
                lp.Character.HumanoidRootPart.XenoFly:Destroy()
            end
        end
    end
end)

CreateToggle("HÄ±z Modu (1Faster)", "SpeedMode", function(v)
    if RE and RE:FindFirstChild("1Faster") then
        RE["1Faster"]:FireServer(v) -- '1Faster' remote'unu kullanÄ±r (Oyun iÃ§i speed)
    else
        if lp.Character then
            lp.Character.Humanoid.WalkSpeed = v and 80 or 16
        end
    end
end)

CreateButton("TÃ¼m AraÃ§larÄ± Getir (1Mobile)", "rbxassetid://6031068426", function()
