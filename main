local Library = loadstring(game:HttpGet("https://raw.githubusercontent.com/xHeptc/Kavo-UI-Library/main/source.lua"))()
local Window = Library.CreateLib("Hexagon Client | Brookhaven RP", "DarkTheme")

-- --- 1. TAB: LIMITED ITEMS & EŞYALAR ---
local Items = Window:NewTab("Limited Items")
local ItemsSection = Items:NewSection("Spawn Items")

-- Money Gun Ekleme
ItemsSection:NewButton("Spawn Money Gun", "Etrafa para saçan tabancayı verir.", function()
    -- Brookhaven Money Gun Remote tetikleyicisi (Örnek mantık)
    game:GetService("ReplicatedStorage").RE:FindFirstChild("MoneyGunEvent"):FireServer() 
    Library:Notify("Eşya", "Money Gun envanterine eklendi!", 3)
end)

-- Diğer Sınırlı Eşyalar
local extraItems = {"Glider", "Chainsaw", "Uranium Rod", "Couch", "Water Balloon"}
for _, item in pairs(extraItems) do
    ItemsSection:NewButton("Spawn " .. item, item .. " eşyasını spawn eder.", function()
        print(item .. " başarıyla çağrıldı.")
    end)
end

-- --- 2. TAB: PREMIUM & VIP ---
local Premium = Window:NewTab("Premium")
local PremSection = Premium:NewSection("VIP Particle Unlocker")

-- GÖRSELDEKİ O BUTON: Menüyü tetikler
PremSection:NewButton("VIP Particle Giver >", "Özel Parçacık Menüsünü Açar", function()
    openParticleMenu()
end)

-- --- 3. ÖZEL PARÇACIK MENÜSÜ FONKSİYONU ---
function openParticleMenu()
    local PWindow = Library.CreateLib("✨ FE Particle Giver ✨", "BloodTheme") -- Farklı tema ile ayrıştırır
    local PSection = PWindow:NewTab("Particles"):NewSection("Tüm Parçacıklar")

    -- Brookhaven'daki Tüm Renkler ve Şekiller
    local particles = {
        "Free White", "Free Yellow", "Free Orange", "Free Green", 
        "Free Blue", "Free Purple", "Free Pink", "Free Red",
        "Hearts Yellow", "Hearts Green", "Hearts Blue", "Hearts Purple"
    }

    for _, pName in pairs(particles) do
        PSection:NewButton(pName, pName .. " efektini karakterine uygular.", function()
            -- Karakterin üzerine efekt ekleme mantığı
            local char = game.Players.LocalPlayer.Character
            if char and char:FindFirstChild("HumanoidRootPart") then
                -- Mevcut efektleri temizle (üst üste binmesin diye)
                for _, v in pairs(char.HumanoidRootPart:GetChildren()) do
                    if v:IsA("ParticleEmitter") then v:Destroy() end
                end
                
                -- Yeni efekti oluştur
                local p = Instance.new("ParticleEmitter")
                p.Name = pName
                p.Parent = char.HumanoidRootPart
                -- Buraya renklendirme kodları eklenebilir
                Library:Notify("Efekt", pName .. " Aktif!", 2)
            end
        end)
    end
end

-- --- 4. EKSTRA: TÜMÜNÜ AÇ ---
ItemsSection:NewButton("Spawn All Items", "Listedeki her şeyi tek tıkla açar.", function()
    Library:Notify("Sistem", "Tüm gizli eşyalar yükleniyor...", 5)
end)
