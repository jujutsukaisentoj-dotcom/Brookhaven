-- 3. VEHICLES (Araba)
local CarTab = Window:MakeTab({
	Name = "Araba",
	Icon = "rbxassetid://4483345998",
	PremiumOnly = false
})

CarTab:AddSection({ Name = "AraÃ§ Kontrol" })

CarTab:AddSlider({
	Name = "AraÃ§ HÄ±zÄ± ArttÄ±r",
	Min = 0,
	Max = 500,
	Default = 50,
	Color = Color3.fromRGB(255, 0, 0),
	Increment = 5,
	ValueName = "Speed",
	Callback = function(Value)
        local seat = game.Players.LocalPlayer.Character.Humanoid.SeatPart
        if seat then
            if seat:IsA("VehicleSeat") then
                seat.MaxSpeed = Value
                seat.Torque = 100000 -- Daha hÄ±zlÄ± kalkÄ±ÅŸ iÃ§in
            end
        end
	end    
})

CarTab:AddButton({
    Name = "AracÄ± UÃ§ur (Gravity 0)",
    Callback = function()
        local seat = game.Players.LocalPlayer.Character.Humanoid.SeatPart
        if seat then
            local bv = Instance.new("BodyVelocity")
            bv.Velocity = Vector3.new(0, 50, 0)
            bv.MaxForce = Vector3.new(math.huge, math.huge, math.huge)
            bv.Parent = seat
            wait(1)
            bv:Destroy()
        end
    end
})

