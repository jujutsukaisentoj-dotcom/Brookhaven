-- 5. AVATAR KOPYALAMA (Copy System) 
local AvatarTab = Window:MakeTab({
	Name = "Avatar",
	Icon = "rbxassetid://10734952036"
})

local selectedTarget = ""
AvatarTab:AddTextbox({
	Name = "Hedef Oyuncu AdÄ±",
	Default = "",
	Callback = function(Value) selectedTarget = Value end
})

AvatarTab:AddButton({
	Name = "KÄ±yafetleri Kopyala",
	Callback = function()
        local targetPlayer = game.Players:FindFirstChild(selectedTarget)
        if targetPlayer then
            local desc = game.Players:GetHumanoidDescriptionFromUserId(targetPlayer.UserId)
            game.Players.LocalPlayer.Character.Humanoid:ApplyDescription(desc)
        end
	end
})

