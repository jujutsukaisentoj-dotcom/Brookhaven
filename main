local OrionLib = loadstring(game:HttpGet(('https://raw.githubusercontent.com/shlexware/Orion/main/source')))()
local Window = OrionLib:MakeWindow({
    Name = "Lyra Hub | Brookhaven RP", 
    HidePremium = false, 
    SaveConfig = true, 
    ConfigFolder = "LyraV4",
    IntroText = "Lyra Hub Y√ºkleniyor...",
    IntroIcon = "rbxassetid://4483345998"
})

-- Deƒüi≈ükenler
local Players = game:GetService("Players")
local lp = Players.LocalPlayer
local RE = game:GetService("ReplicatedStorage"):WaitForChild("RE")
local triggerEvent = RE:WaitForChild("1Playe1rTrigge1rEven1t")

-- Sekmeler
local MainTab = Window:MakeTab({ Name = "Karakter", Icon = "rbxassetid://4483345998" })
local ItemTab = Window:MakeTab({ Name = "E≈üyalar", Icon = "rbxassetid://4483345998" })
local CarTab = Window:MakeTab({ Name = "Araba", Icon = "rbxassetid://4483345998" })
local HouseTab = Window:MakeTab({ Name = "Ev & D√ºnya", Icon = "rbxassetid://4483345998" })
local AvatarTab = Window:MakeTab({ Name = "Avatar Copy", Icon = "rbxassetid://4483345998" })
local TrollTab = Window:MakeTab({ Name = "Troll", Icon = "rbxassetid://4483345998" })

-- 1. ANA MEN√ú (KARAKTER)
MainTab:AddSection({ Name = "Karakter Ayarlarƒ±" })

MainTab:AddSlider({
    Name = "Y√ºr√ºme Hƒ±zƒ±",
    Min = 16, Max = 500, Default = 16, Increment = 1,
    Callback = function(v) 
        if lp.Character and lp.Character:FindFirstChild("Humanoid") then
            lp.Character.Humanoid.WalkSpeed = v 
        end
    end
})

MainTab:AddSlider({
    Name = "Zƒ±plama G√ºc√º",
    Min = 50, Max = 500, Default = 50, Increment = 1,
    Callback = function(v) 
        if lp.Character and lp.Character:FindFirstChild("Humanoid") then
            lp.Character.Humanoid.JumpPower = v 
        end
    end
})

MainTab:AddToggle({
    Name = "Noclip (Duvardan Ge√ß)",
    Default = false,
    Callback = function(state)
        _G.Noclip = state
        game:GetService("RunService").Stepped:Connect(function()
            if _G.Noclip and lp.Character then
                for _, v in pairs(lp.Character:GetDescendants()) do
                    if v:IsA("BasePart") then v.CanCollide = false end
                end
            end
        end)
    end
})

MainTab:AddButton({
    Name = "U√ßma Modu (Fly)",
    Callback = function()
        loadstring(game:HttpGet("https://raw.githubusercontent.com/XNEOFF/FlyGuiV3/main/FlyGuiV3.txt"))()
    end
})

MainTab:AddButton({
    Name = "Yeniden Doƒü (Reset)",
    Callback = function()
        lp.Character:BreakJoints()
    end
})

-- 2. E≈ûYALAR (√ñZEL Sƒ∞LAHLAR VE ARA√áLAR)
ItemTab:AddSection({ Name = "√ñzel E≈üyalar" })

local function GetTool(toolName)
    pcall(function()
        triggerEvent:FireServer("AcceptedToolToServer", toolName, lp)
    end)
end

ItemTab:AddButton({ Name = "üí∏ Money Gun", Callback = function() GetTool("MoneyGun") end })
ItemTab:AddButton({ Name = "ü™Ç Glider", Callback = function() GetTool("Glider") end })
ItemTab:AddButton({ Name = "‚ùÑÔ∏è Snowball Cannon", Callback = function() GetTool("SnowballCannon") end })
ItemTab:AddButton({ Name = "üí£ Cannon", Callback = function() GetTool("Cannon") end })
ItemTab:AddButton({ Name = "ü™ì Scythe", Callback = function() GetTool("Scythe") end })
ItemTab:AddButton({ Name = "üèÄ Golden Basketball", Callback = function() GetTool("GoldenBasketball") end })
ItemTab:AddButton({ Name = "üß™ Ye≈üil Kristal", Callback = function() GetTool("UraniumRod") end })
ItemTab:AddButton({ Name = "ü™ö Chainsaw", Callback = function() GetTool("Chainsaw") end })
ItemTab:AddButton({ Name = "üß† Telekinesis V5", Callback = function() loadstring(game:HttpGet("https://raw.githubusercontent.com/BRENOPOOF/fe-telekinessv5/refs/heads/main/Main.txt"))() end })

-- 3. ARABA (MAX HIZ VE RGB)
CarTab:AddSection({ Name = "Ara√ß Modifiye" })

CarTab:AddButton({
    Name = "Araba Hƒ±z Limitini Kaldƒ±r (200 KMH)",
    Callback = function()
        local seat = lp.Character.Humanoid.SeatPart
        if seat and seat:IsA("VehicleSeat") then
            seat.MaxSpeed = 200
            seat.Torque = 10000
        else
            OrionLib:MakeNotification({Name = "Hata", Content = "√ñnce bir araca binmelisin!", Time = 3})
        end
    end
})

CarTab:AddToggle({
    Name = "Araba RGB Modu",
    Default = false,
    Callback = function(state)
        _G.CarRGB = state
        task.spawn(function()
            while _G.CarRGB do
                local seat = lp.Character.Humanoid.SeatPart
                if seat and seat.Parent then
                    for _, v in pairs(seat.Parent:GetDescendants()) do
                        if v:IsA("BasePart") or v:IsA("MeshPart") then
                            v.Color = Color3.fromHSV(tick() % 5 / 5, 1, 1)
                        end
                    end
                end
                task.wait(0.1)
            end
        end)
    end
})

CarTab:AddButton({
    Name = "Zƒ±playan Araba",
    Callback = function()
        local seat = lp.Character.Humanoid.SeatPart
        if seat then
            local bf = Instance.new("BodyForce", seat)
            bf.Force = Vector3.new(0, seat:GetMass() * 500, 0)
            wait(0.2)
            bf:Destroy()
        end
    end
})

-- 4. EV (Gƒ∞ZLƒ∞ YERLER VE D√úNYA)
HouseTab:AddSection({ Name = "D√ºnya Etkile≈üimi" })

HouseTab:AddButton({
    Name = "T√ºm Evlerin Kapƒ±sƒ±nƒ± A√ß",
    Callback = function()
        for _, v in pairs(workspace:GetDescendants()) do
            if v.Name == "Door" or v.Name == "Gate" then
                v.CanCollide = false
                v.Transparency = 0.5
            end
        end
    end
})

HouseTab:AddButton({
    Name = "I≈üƒ±nlan: Banka Kasasƒ±",
    Callback = function()
        lp.Character.HumanoidRootPart.CFrame = CFrame.new(157, 13, -177)
    end
})

-- 5. AVATAR COPY (GELƒ∞≈ûMƒ∞≈û)
AvatarTab:AddSection({ Name = "Kƒ±yafet √áalma" })

local targetName = ""
AvatarTab:AddTextbox({
    Name = "Oyuncu Adƒ±",
    Default = "",
    TextDisappear = false,
    Callback = function(v) targetName = v end
})

AvatarTab:AddButton({
    Name = "Avatarƒ± Kopyala",
    Callback = function()
        for _, p in pairs(Players:GetPlayers()) do
            if string.find(string.lower(p.Name), string.lower(targetName)) or string.find(string.lower(p.DisplayName), string.lower(targetName)) then
                local desc = Players:GetHumanoidDescriptionFromUserId(p.UserId)
                lp.Character.Humanoid:ApplyDescription(desc)
                OrionLib:MakeNotification({Name = "Ba≈üarƒ±lƒ±", Content = p.Name .. " kopyalandƒ±!", Time = 2})
                break
            end
        end
    end
})

-- 6. TROLL
TrollTab:AddSection({ Name = "Eƒülence Men√ºs√º" })

TrollTab:AddButton({
    Name = "Fling (Herkesi Fƒ±rlat)",
    Callback = function()
        loadstring(game:HttpGet("https://raw.githubusercontent.com/0866/lua/main/UniversalFling.lua"))()
    end
})

TrollTab:AddButton({
    Name = "View Player (Oyuncuyu ƒ∞zle)",
    Callback = function()
        for _, p in pairs(Players:GetPlayers()) do
            if string.find(string.lower(p.Name), string.lower(targetName)) then
                workspace.CurrentCamera.CameraSubject = p.Character.Humanoid
                break
            end
        end
    end
})

TrollTab:AddButton({
    Name = "Kendi Kamerana D√∂n",
    Callback = function()
        workspace.CurrentCamera.CameraSubject = lp.Character.Humanoid
    end
})

-- A√á/KAPAT BUTONU (MODERN TASARIM)
local OpenGui = Instance.new("ScreenGui")
local OpenBtn = Instance.new("TextButton")
local UIStroke = Instance.new("UIStroke")
local UICorner = Instance.new("UICorner")

OpenGui.Name = "LyraOpener"
OpenGui.Parent = lp:WaitForChild("PlayerGui")
OpenGui.ResetOnSpawn = false

OpenBtn.Parent = OpenGui
OpenBtn.BackgroundColor3 = Color3.fromRGB(145, 90, 230)
OpenBtn.Size = UDim2.new(0, 60, 0, 30)
OpenBtn.Position = UDim2.new(0, 10, 0.4, 0)
OpenBtn.Text = "LYRA"
OpenBtn.Font = Enum.Font.GothamBold
OpenBtn.TextSize = 14
OpenBtn.TextColor3 = Color3.new(1,1,1)
OpenBtn.Draggable = true

UICorner.CornerRadius = UDim.new(0, 8)
UICorner.Parent = OpenBtn

UIStroke.Thickness = 2
UIStroke.Color = Color3.new(1,1,1)
UIStroke.Parent = OpenBtn

OpenBtn.MouseButton1Click:Connect(function()
    OrionLib:Init() 
end)

OrionLib:Init()
